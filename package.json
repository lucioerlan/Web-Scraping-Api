{
  "name": "Web-Scraping-Api",
  "author": "Erlan Lucio",
  "version": "1.0.0",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "pre-push": "cross-env CI=true npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint src --fix --ext .js",
      "cross-env CI=true npm run test --findRelatedTests"
    ]
  },
  "scripts": { 
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "mocha tests/**/*.test.js --timeout 30000 --exit",
    "lint": "eslint src --fix --ext .js",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucioerlan/Web-Scraping-Api.git"
  },
  "bugs": {
    "url": "https://github.com/lucioerlan/Web-Scraping-Api/issues"
  },
  "homepage": "https://github.com/lucioerlan/Web-Scraping-Api#readme",
  "dependencies": {
    "axios": "^1.6.4",
    "body-parser": "^1.19.0",
    "chalk": "4.1.2",
    "cheerio": "^1.0.0-rc.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "ip": "^1.1.5",
    "js-yaml": "^3.3.0",
    "mongoose": "^5.12.7",
    "ms": "^2.1.3",
    "node-uuid": "^1.4.8",
    "swagger-ui-express": "^4.0.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^6.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.0",
    "mocha": "^8.1.3",
    "nodemon": "^1.19.4",
    "sonarqube-scanner": "2.8.1"
  }
}
